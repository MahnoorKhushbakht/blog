
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Comment {
   id        String   @id @default(auto()) @map("_id") @db.ObjectId // MongoDB ObjectId
  slug     String   // same as Review.slug in Strapi
  user     String
  type     String
  message  String
  postedAt DateTime @default(now())
}