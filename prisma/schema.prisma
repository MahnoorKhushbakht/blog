
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Comment {
  id       String   @id @default(uuid())
  slug     String   // same as Review.slug in Strapi
  user     String
  type     String
  message  String
  postedAt DateTime @default(now())
}